<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_task_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sjs.dz.rzxt2.TaskInfoActivity"
    android:orientation="vertical"
    android:background="@color/windowBackground">
    <android.support.v7.widget.Toolbar
        android:id="@+id/task_info_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <TextView
            android:id="@+id/task_info_toolbar_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/textColorWhite"
            android:text="@string/task_info"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:id="@+id/sLayout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadingEdge="none"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="100dp">
    <include
        layout="@layout/layout_com_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        />
    <include
        layout="@layout/layout_info_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>
    <include
        layout="@layout/layout_info_1get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>
    <include
        layout="@layout/layout_info_2get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>
    <include
        layout="@layout/layout_info_3get"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"/>

    <include
        layout="@layout/layout_info_memo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="100dp"
        android:gravity="center">
    <Button
        android:id="@+id/saveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:paddingLeft="100dp"
        android:paddingRight="100dp"
        android:textColor="@color/textColorWhite"
        android:background="@drawable/touch_uploadbtn_bg"
        />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
    </LinearLayout>